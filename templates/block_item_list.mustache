{{!
    @template block_fastnav/block_item_list

    Used for fastnav block and fast menu navigation

    Example context (json):
    {
        "open" : true,
        "items": [
            {
                "name": "Name",
                "link": "/test",
                "icon": "/pluginfiles.php?"
            }
        ]
    }
}}
<div>
    <div class="block-fastnav-opener btn btn-light">
        <i class="icon fa fa-arrow-left"></i>
    </div>
    <ul class="block-fastnav-items">
        {{#items}}
            <li>
                <a href="{{link}}" rel="noreferrer" data-placement="left" title="{{name}}">
                    <figure>
                        <img src="{{icon}}" alt="{{name}}" class="block-fastnav-icon">
                        <span class="block-fastnav-name">
                            {{name}}
                        </span>
                    </figure>
                </a>
            </li>
        {{/items}}
    </ul>
</div>
<div class="block-fastnav-lock {{#open}}active{{/open}}">
    <i class="fa fa-lock"></i>
</div>